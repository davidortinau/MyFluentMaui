<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyFluentMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyFluentMaui"
    Title="MyFluentMaui">

    <TabBar>
        <ShellContent
            Title="XAML Form"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Blazor Form"
            ContentTemplate="{DataTemplate local:BlazorContactPage}"
            Route="BlazorContactPage" />
    </TabBar>

</Shell>
