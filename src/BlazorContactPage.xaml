<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:blazor="clr-namespace:Microsoft.AspNetCore.Components.WebView.Maui;assembly=Microsoft.AspNetCore.Components.WebView.Maui"
             xmlns:components="clr-namespace:MyFluentMaui.Components"
             x:Class="MyFluentMaui.BlazorContactPage"
             Title="Blazor Contact">
    <blazor:BlazorWebView HostPage="wwwroot/index.html">
        <blazor:BlazorWebView.RootComponents>
            <!-- Point to the Razor root component (App.razor) inside the Components namespace -->
            <blazor:RootComponent Selector="#app"
                    ComponentType="{x:Type components:App}"/>
        </blazor:BlazorWebView.RootComponents>
    </blazor:BlazorWebView>
</ContentPage>